{
  "name": "delphi-llms",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/delphi-llms",
  "containerEnv": {
    "OLLAMA_HOST": "http://ollama:11434",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  },
  "forwardPorts": [11434],
  "postCreateCommand": "uv --version",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml"
      ]
    }
  }
}
